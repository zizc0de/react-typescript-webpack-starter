{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist/server/",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": [
    "src/server"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
